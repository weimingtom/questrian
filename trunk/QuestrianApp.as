w(this.monsterMac, 128, 64);			this.monsterFrame.x = 352;			this.monsterFrame.y = 0;			this.monsterFrame.width = 128;			this.monsterFrame.height = 64;			addChild(this.monsterFrame);			this.tankFrame=new CharacterView(this.tankMac, 128, 64);			this.tankFrame.x = 0;			this.tankFrame.y = 0;			this.tankFrame.width = 128;			this.tankFrame.height = 64;			addChild(this.tankFrame);			this.dpsFrame=new CharacterView(this.dpsMac, 128, 64);			this.dpsFrame.x = 0;			this.dpsFrame.y = 64;			this.dpsFrame.width = 128;			this.dpsFrame.height = 64;			addChild(this.dpsFrame);			this.healsFrame=new CharacterView(this.healsMac, 128, 64);			this.healsFrame.x = 0;			this.healsFrame.y = 128;			this.healsFrame.width = 128;			this.healsFrame.height = 64;			addChild(this.healsFrame);		}		internal function createControler():void {			trace("QuestrianApp:createControler()");			this.questEngine = new GameEngine();		}	}// end class}// end package